# =========================
# FACE RECOGNITION (KIOSK)
# =========================
# Token bảo vệ endpoint tải face-directory (tuỳ chọn). Nếu để trống thì không yêu cầu.
KIOSK_FACE_TOKEN=

# Default model version mà FE/BE dùng để đồng bộ embedding
FACE_MODEL_VERSION=mobilefacenet_v1
APP_NAME=Laravel
APP_ENV=local
APP_KEY=base64:REPLACE_WITH_ACTUAL_KEY_GENERATED_BY_php_artisan_key:generate
APP_DEBUG=true
APP_URL=http://localhost

# SECURITY NOTE:
# - APP_KEY is CRITICAL for encryption. DO NOT change after encrypting data!
# - Store APP_KEY securely (use vault/secrets manager in production)
# - Run: php artisan key:generate (only once during initial setup)

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=root
DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local

# BỔ SUNG: Google Sheets (Service Account)
# 1) Tạo Google Cloud Service Account + bật Google Sheets API
# 2) Share spreadsheet cho email service account
# 3) Điền spreadsheet id tại GOOGLE_SHEETS_SPREADSHEET_ID
# Chọn 1 trong 2 cách cấu hình credentials:
# - GOOGLE_SHEETS_CREDENTIALS_PATH=đường_dẫn_tới_file_json
# - GOOGLE_SHEETS_CREDENTIALS_JSON=JSON raw hoặc base64(JSON)
GOOGLE_SHEETS_SPREADSHEET_ID=
GOOGLE_SHEETS_CREDENTIALS_PATH=
GOOGLE_SHEETS_CREDENTIALS_JSON=
GOOGLE_SHEETS_STATISTICS_SHEET=Statistics
GOOGLE_SHEETS_PAYROLL_SHEET=Payroll

# append: luôn thêm dòng (lưu lịch sử)
# replace: thay thế dữ liệu trong kỳ (chuẩn vận hành, tránh trùng khi sync lại)
GOOGLE_SHEETS_EXPORT_MODE=replace

# Auto-sync Google Sheets (Laravel Scheduler). Tắt mặc định.
GOOGLE_SHEETS_AUTO_SYNC_ENABLED=false
# Statistics: sync tháng hiện tại mỗi ngày lúc ... (HH:MM)
GOOGLE_SHEETS_AUTO_SYNC_DAILY_AT=23:55
# Payroll: chạy hàng tháng (ngày 1..28) lúc ... (HH:MM), export THÁNG TRƯỚC
GOOGLE_SHEETS_AUTO_SYNC_PAYROLL_DAY=1
GOOGLE_SHEETS_AUTO_SYNC_PAYROLL_AT=00:10
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
